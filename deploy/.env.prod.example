# ThreadCast Production Environment Variables
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!

# Database Configuration
DB_HOST=threadcast-db.xxxxx.ap-northeast-2.rds.amazonaws.com
DB_PORT=5432
DB_NAME=threadcast
DB_USERNAME=threadcast
DB_PASSWORD=your-secure-password-here

# JWT Secret (generate with: openssl rand -base64 64)
JWT_SECRET=your-256-bit-secure-key-here

# SessionCast OAuth (if using OAuth integration)
SESSIONCAST_URL=https://sessioncast.io
OAUTH_CLIENT_ID=threadcast
OAUTH_CLIENT_SECRET=your-oauth-secret-here
SESSIONCAST_TOKEN=your-sessioncast-token-here

# Spring Profile
SPRING_PROFILES_ACTIVE=prod
